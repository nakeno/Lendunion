<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_20">

        <TextView
            android:id="@+id/tv_object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_20"
            android:text="Something Great"
            android:textSize="@dimen/textsize_22sp_in_normal"/>

        <TextView
            android:id="@+id/tv_object_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_object_name"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_6"
            android:layout_toLeftOf="@+id/iv_object"
            android:text="I would like to introduce my first CD player, it was bought from ZhuangGuanCun in 2004"
            android:textSize="@dimen/textsize_14sp_in_normal"/>

        <ImageView
            android:id="@+id/iv_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:minHeight="120dp"
            android:minWidth="120dp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>